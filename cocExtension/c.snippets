snippet fr_list_of_word "Description" b
strcpy(list_of_word[index_word], "$1");
index_word += 1;
endsnippet

snippet fr_add_number "Description" b
if (!isnan(scenario_struct.${1:varname})) {
	strcpy(word, "$1");
	cJSON_AddNumberToObject(observation_geometry, word,
													scenario_struct.$1);
}
endsnippet
